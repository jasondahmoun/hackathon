{% extends 'base.html.twig' %}

{% block title %}Liste des Employés{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">Liste des Employés</h1>
        <a href="{{ path('app_employee_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouvel Employé
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="ps-3">ID</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Rôle</th>
                            <th>Disponibilité</th>
                            <th class="text-end pe-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for employee in employees %}
                        <tr>
                            <td class="ps-3">{{ employee.id }}</td>
                            <td>{{ employee.nom }}</td>
                            <td>{{ employee.prenom }}</td>
                            <td>
                                <a href="mailto:{{ employee.email }}" class="text-decoration-none">
                                    <i class="fas fa-envelope me-2 text-muted"></i>{{ employee.email }}
                                </a>
                            </td>
                            <td>
                                <span class="badge bg-info">{{ employee.role }}</span>
                            </td>
                            <td>
                                {% if employee.disponibilite %}
                                    <span class="badge bg-success">Disponible</span>
                                {% else %}
                                    <span class="badge bg-danger">Indisponible</span>
                                {% endif %}
                            </td>
                            <td class="text-end pe-3">
                                <div class="btn-group">
                                    <a href="{{ path('app_employee_show', {'id': employee.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p class="mb-0">Aucun employé trouvé</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
