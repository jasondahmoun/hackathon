{% extends 'base.html.twig' %}

{% block title %}Chantier{% endblock %}

{% block body %}
<div style="max-width: 960px; margin: 40px auto; padding: 20px; background: #fff; border: 1px solid #ddd; border-radius: 4px;">
    <h1 style="margin-bottom: 20px;">Chantier</h1>
    <table style="width: 100%; border-collapse: collapse;">
        <tbody>
            <tr>
                <th style="padding: 10px; border: 1px solid #ddd; background-color: #f2f2f2;">Id</th>
                <td style="padding: 10px; border: 1px solid #ddd;">{{ chantier.id }}</td>
            </tr>
            <tr>
                <th style="padding: 10px; border: 1px solid #ddd; background-color: #f2f2f2;">Nom</th>
                <td style="padding: 10px; border: 1px solid #ddd;">{{ chantier.nom }}</td>
            </tr>
            <tr>
                <th style="padding: 10px; border: 1px solid #ddd; background-color: #f2f2f2;">Adresse</th>
                <td style="padding: 10px; border: 1px solid #ddd;">{{ chantier.adresse }}</td>
            </tr>
            <tr>
                <th style="padding: 10px; border: 1px solid #ddd; background-color: #f2f2f2;">Date_debut</th>
                <td style="padding: 10px; border: 1px solid #ddd;">{{ chantier.dateDebut ? chantier.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th style="padding: 10px; border: 1px solid #ddd; background-color: #f2f2f2;">Date_fin</th>
                <td style="padding: 10px; border: 1px solid #ddd;">{{ chantier.dateFin ? chantier.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div style="margin-top: 20px;">
        <a href="{{ path('app_chantier_index') }}" style="display: inline-block; padding: 10px 15px; background-color: #343a40; color: #fff; border-radius: 4px; text-decoration: none;">Back to list</a>
    </div>
</div>
{% endblock %}
