{# templates/chantier/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des Chantiers{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des Chantiers</h1>

        {# Tableau des chantiers #}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Adresse</th>
                        <th scope="col">Date de Début</th>
                        <th scope="col">Date de Fin</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for chantier in chantiers %}
                        <tr>
                            <th scope="row">{{ loop.index }}</th>
                            <td>{{ chantier.nom }}</td>
                            <td>{{ chantier.adresse }}</td>
                            <td>{{ chantier.dateDebut|date('d/m/Y H:i') }}</td>
                            <td>{{ chantier.dateFin|date('d/m/Y H:i') }}</td>
                            <td>
                                <a href="{{ path('app_chantier_show', {'id': chantier.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">Aucun chantier trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}